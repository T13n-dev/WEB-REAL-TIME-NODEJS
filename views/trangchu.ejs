              src="https://ptetutorials.com/images/user-profile.png"
            />
            <p> 
            </p>
                <input
                type="text"
                id="txtUsername"
                class="form-control form-group"
                placeholder="Your name"
                required
                autofocus
                />
    
                <button
                id="btnRegister"
                class="btn btn-lg btn-primary btn-block btn-signin"
                type="button"
                >
                Join now
